# Songo BI Environment Configuration Template
# Copy this file to .env and customize for your environment

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-change-in-production
DEBUG=true

# Database Configuration
DATABASE_URL=postgresql://songo:songo_password@localhost:5432/songo_bi

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# NetSuite Configuration (Required for NetSuite integration)
NETSUITE_ACCOUNT_ID=your_netsuite_account_id
NETSUITE_CONSUMER_KEY=your_consumer_key
NETSUITE_CONSUMER_SECRET=your_consumer_secret
NETSUITE_TOKEN_ID=your_token_id
NETSUITE_TOKEN_SECRET=your_token_secret
NETSUITE_REFRESH_INTERVAL=1800

# OpenAI Configuration (Required for AI chatbot)
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4
CHATBOT_MAX_TOKENS=2000
CHATBOT_TEMPERATURE=0.7

# Feature Flags
ENABLE_NETSUITE=true
ENABLE_CHATBOT=true
ENABLE_AI_INSIGHTS=true
ENABLE_AUTO_REFRESH=true

# Security Configuration
WTF_CSRF_ENABLED=false
SESSION_COOKIE_SECURE=false
TALISMAN_ENABLED=false

# Logging
LOG_LEVEL=INFO

# Songo BI Specific
SONGO_WEBSERVER_PORT=8088
SONGO_WEBSERVER_ADDRESS=0.0.0.0
SONGO_WEBSERVER_TIMEOUT=60
